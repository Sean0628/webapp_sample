<%= f.hidden_field :id %>
<table>
  <tr>
    <th>Country</th>
    <td><%= f.collection_select :country_id, Country.all, :id, :name %></td>
  </tr>
  <tr>
    <th>Address</th>
    <td><%= f.text_area :address %></td>
  </tr>
  <tr>
    <th>City</th>
    <td><%= f.text_field :city %></td>
  </tr>
  <tr>
    <th>Province</th>
    <td><%= f.collection_select :province_id, Province.all, :id, :name %></td>
  </tr>
  <tr>
    <th>Zip Code</th>
    <td><%= f.text_field :zip_code %></td>
  </tr>
</table>
