<table>
  <tr>
    <th>Country</th>
    <td><%= f.collection_select :country_id, @countries, :id, :name %></td>
  </tr>
  <tr>
    <th>Address</th>
    <td><%= f.text_area :address %></td>
  </tr>
  <tr>
    <th>City</th>
    <td><%= f.text_area :city %></td>
  </tr>
  <tr>
    <th>Province</th>
    <td><%= f.collection_select :province_id, @provinces, :id, :name %></td>
  </tr>
  <tr>
    <th>Zip Code</th>
    <td><%= f.text_field :zip_code %></td>
  </tr>
</table>

